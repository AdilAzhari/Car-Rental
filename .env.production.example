APP_NAME="Car Rental System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=car_rental_production
DB_USERNAME=car_rental_user
DB_PASSWORD=

# Session Configuration (use redis for better performance)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

# Cache Configuration (use redis for production)
CACHE_STORE=redis
CACHE_PREFIX=car_rental

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Mail Configuration
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# MACROKIOSK SMS Configuration
# Documentation: https://www.macrokiosk.com
# Support: +603 2163 2100 (24hours) / techsupport@macrokiosk.com
SMS_PROVIDER=macrokiosk
SMS_USERNAME=
SMS_PASSWORD=
SMS_SERVICE_ID=
SMS_API_KEY=
SMS_USE_JWT=true
SMS_BASE_URL=https://www.etracker.cc/bulksms
SMS_DEFAULT_SENDER=CarRental
SMS_LOG_REQUESTS=true
SMS_LOG_RESPONSES=true

# SMS Queue Settings (use redis in production)
SMS_QUEUE_ENABLED=true
SMS_QUEUE_CONNECTION=redis
SMS_QUEUE_NAME=sms

# Security Settings
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com

# Performance Optimization
OCTANE_SERVER=swoole
# OCTANE_HTTPS=true

# Monitoring (Optional - Add your monitoring service credentials)
# SENTRY_LARAVEL_DSN=
# BUGSNAG_API_KEY=

# Backup Configuration (if using spatie/laravel-backup)
# BACKUP_DISK=s3
# BACKUP_NOTIFICATION_EMAIL=admin@yourdomain.com
